# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Signup, login, reset password, ...

POST    /login                      controllers.LoginController.login()

POST    /signup                     controllers.LoginController.signup()

POST    /forgotpassword             controllers.LoginController.forgotPwd()

GET     /users                      controllers.UserController.getAllUsers()

# Mashup
POST    /mashup                     controllers.MashupController.submitMashup()
GET     /search/mashup              controllers.MashupController.searchMashup()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


#Submit API
POST    /submitapi                     controllers.ApiController.submitApi()

GET    /getapi                         controllers.ApiController.getApi()